// question 1

#include <stdio.h>

int main() {
    printf("Hello, World!\n");
    return 0;
}

// question 2

#include <stdio.h>

int main() {
    unsigned short int x = 1;
    short int y = 65535;
    unsigned char c = 'A';

    printf("x has the value %hu\n", x);
    printf("y has the value %d\n", y);
    printf("c has the value %c\n", c);

    return 0;
}

// question 3A

#include <stdio.h>

int main() {
    int i;
    for (i = 1; i <= 20; i++) {
        if (i % 2 == 0) {
            printf("%d\n", i);
        }
    }
    return 0;
}

// question 3B

#include <stdio.h>

int main() {
    int i = 1;
    while (i <= 20) {
        if (i % 2 == 0) {
            printf("%d\n", i);
        }
        i++;
    }
    return 0;
}
